<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/scene_scan_end"
        motion:constraintSetStart="@+id/scene_scan_start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/scan_save_box"
            motion:touchAnchorSide="bottom" />
    </Transition>

    <ConstraintSet
        android:id="@+id/scene_scan_end"
        motion:deriveConstraintsFrom="@id/scene_scan_start">
        <Constraint android:id="@id/scan_save_box">
            <Layout
                android:layout_width="0dp"
                android:layout_height="640dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"/>
        </Constraint>
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            motion:layout_editor_absoluteY="236dp"
            motion:layout_editor_absoluteX="16dp"
            android:id="@+id/scan_other_text"
            motion:layout_constraintBottom_toBottomOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/scene_scan_start">
        <Constraint
            android:id="@id/scan_save_box">
            <Layout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent" />
        </Constraint>
    </ConstraintSet>

</MotionScene>