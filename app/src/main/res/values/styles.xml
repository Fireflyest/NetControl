<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorRipple</item>
        <item name="colorError">@color/colorRed</item>
        <item name="background">@color/colorBackground</item>
        <item name="customColorValue">@color/colorForeground</item>
        <item name="titleTextColor">@color/colorText</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/change</item>
        <item name="android:windowExitTransition">@transition/change</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/share_change</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/share_change</item>
    </style>


    <style name="button_primary_style">
        <item name="android:textColor">?attr/customColorValue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/round_primary</item>
    </style>

    <style name="button_primary_light_style">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_primary_light</item>
    </style>

    <style name="text_bold">
        <item name="android:textColor">@color/colorIcon</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_emphasis">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textScaleX">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_max">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textScaleX">1.1</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>