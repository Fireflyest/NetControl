<resources>
    <style name="AppLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorRipple</item>
        <item name="colorError">@color/colorRed</item>
        <item name="background">@color/colorBackground</item>
        <item name="customColorValue">@color/colorForeground</item>
        <item name="titleTextColor">@color/colorText</item>
        <item name="subtitleTextColor">@color/colorIcon</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorBackground</item>
        <item name="itemTextColor">@color/colorItemText</item>
        <item name="placeholderTextColor">@color/colorTextLight</item>
        <item name="editTextColor">@color/colorTextLight</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowEnterTransition">@transition/change</item>
        <item name="android:windowExitTransition">@transition/change</item>

        <item name="android:windowSharedElementEnterTransition">
            @transition/share_change</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/share_change</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorRippleDark</item>
        <item name="colorError">@color/colorRed</item>
        <item name="background">@color/colorBackgroundDark</item>
        <item name="customColorValue">@color/colorForegroundDark</item>
        <item name="titleTextColor">@color/colorTextLight</item>
        <item name="subtitleTextColor">@color/colorIconLight</item>
        <item name="colorSurface">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/colorBackgroundDark</item>
        <item name="itemTextColor">@color/colorItemTextLight</item>
        <item name="placeholderTextColor">@color/colorTextLight</item>
        <item name="editTextColor">@color/colorTextLight</item>
        <item name="android:textColor">@color/colorTextLight</item>

        <item name="android:statusBarColor">@android:color/transparent</item>


        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/change_in</item>
        <item name="android:windowExitTransition">@transition/change_out</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/share_change</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/share_change</item>
    </style>

    <style name="bottom_sheet_dialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="button_primary_style">
        <item name="android:textColor">?attr/customColorValue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/round_primary</item>
    </style>

    <style name="button_primary_light_style">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">22dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_primary_light</item>
    </style>

    <style name="text_bold">
        <item name="android:textColor">?attr/subtitleTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_emphasis">
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textScaleX">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_max">
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textScaleX">1.1</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>